---
import Script from '../components/Script.astro';
---

<html>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Devops Front</title>
        <style>
            body {
                font-family: Arial, sans-serif;
                margin: 0;
                padding: 0;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                height: 100vh;
                background-color: #f0f0f0;
                color: #333;
            }

            h1 {
                font-size: 2.2em;
                margin-bottom: 1em;
            }

            #button {
                display: block;
                margin-bottom: 1em;
                padding: 0.5em 1em;
                background-color: #4CAF50;
                color: white;
                border: none;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

            #button:hover {
                background-color: #45a049;
            }

            #result {
                padding: 1em;
                border: 1px solid #ccc;
                width: 50%;
                word-wrap: break-word;
            }
        </style>
	</head>
	<body>
		<h1>Devops Front</h1>
        <button id="button">Cliquez ici</button>
        <p id="result"></p>

        <Script />
	</body>
</html>
